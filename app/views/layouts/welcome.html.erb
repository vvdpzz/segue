<!DOCTYPE html>
<html>
<head>
  <title>Segue</title>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top: 60px">
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <h3><%= link_to "Segue", "/" %></h3>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>
      <%= yield %>
    </div>
  </div>
</body>
</html>
