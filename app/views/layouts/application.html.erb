<!DOCTYPE html>
<html>
<head>
  <title>Segue</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="padding-top: 60px">
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <ul class="nav">
          <li><%= link_to "Home", "/path1"  %></li>
          <li><%= link_to "Connect", "/path2"  %></li>
          <li><%= link_to "Discover", "/path3"  %></li>
        </ul>
        <i class="larry-topbar"></i>
        <ul class="secondary-nav pull-right">
          <li><a href="/users/<%= current_user %>"><%= current_user.name %></a>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="content">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>
      <div class="row">
        <div class="span11">
          <%= yield %>
        </div>
        <div class="span4">
          <h3>Sidebar</h3>
          <ul>
            <li><%= link_to "Link1", "/path1"  %></li>
            <li><%= link_to "Link2", "/path2"  %></li>
            <li><%= link_to "Link3", "/path3"  %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
